#!/bin/bash
set -e

for srcName in ./src_*; do
    productName="${srcName/src/pack}"

    if [ -n "$(ls "$srcName" | grep "ext_")" ];then
        for extPack in "$srcName"/ext_*; do
            cp "$extPack"/* "$productName/" -r -v
        done;
    fi

    cp "$srcName/main"/* "$productName/" -r -v
done;